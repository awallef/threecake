{
	"name": "awallef/threecake",
	"description": "a cakephp start point to use with composer and more",
	"minimum-stability": "dev",
	"require": {
		"php": ">=5.2",
		"cakephp/cakephp": "*",
        "awallef/trois": "dev-master",
        "awallef/moderncake": "dev-master"
	},
	"autoload": {
		"psr-0": {"": "src/"}
	},
	"scripts": {
		"post-install-cmd": ["Threecake\\Composer::afterInstall","Trois\\Composer::afterInstall"]
	},
	"extra": {
		"cakephp-app-dir": "app",
                "vendor-dir" : "vendors"
	},
	"repositories": {
		"cakephp-unofficial": {
			"type": "package",
			"package": {
				"name": "cakephp/cakephp",
				"version": "2.3.1",
				"source": {
					"url": "git://github.com/cakephp/cakephp.git",
					"type": "git",
					"reference": "origin/master"
				}
			}
		}
	},
        "config": {
            "vendor-dir" : "vendors"
        }
}